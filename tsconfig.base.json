{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@puzzle-repo/puzzle-engine": [
        "libs/puzzle-engine/src/index.ts"
      ],
      "@puzzle-repo/puzzle-move-generator": [
        "libs/puzzle-move-generator/src/index.ts"
      ],
      "@puzzle-repo/puzzle-ui-components": [
        "libs/puzzle-ui-components/src/index.ts"
      ],
      "@spartan-ng/ui-button-helm": [
        "libs/spartan/ui-button-helm/src/index.ts"
      ],
      "@spartan-ng/ui-card-helm": [
        "libs/spartan/ui-card-helm/src/index.ts"
      ],
      "@spartan-ng/ui-icon-helm": [
        "libs/spartan/ui-icon-helm/src/index.ts"
      ],
      "@spartan-ng/ui-scrollarea-helm": [
        "libs/spartan/ui-scrollarea-helm/src/index.ts"
      ],
      "@spartan-ng/ui-dialog-helm": [
        "libs/spartan/ui-dialog-helm/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
